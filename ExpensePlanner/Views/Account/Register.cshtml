@model ExpensePlanner.Models.Register

<h1>Register</h1>

@using(Html.BeginForm("Register", "Account", FormMethod.Post))
{
	@*@Html.ValidationMessageFor(a => a.UserName)*@
	@Html.ValidationSummary()

	<span>Login: </span> @Html.TextBoxFor(a => a.UserName);
	<span>Email: </span> @Html.TextBoxFor(a => a.Email);
	<span>Password: </span> @Html.PasswordFor(a => a.Password);

	<button type="submit">Register</button>
}

